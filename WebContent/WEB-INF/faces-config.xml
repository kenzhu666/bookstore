<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
	<managed-bean>
		<managed-bean-name>book</managed-bean-name>
		<managed-bean-class>bean.Book</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>review</managed-bean-name>
		<managed-bean-class>bean.Review</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>rate</property-name>
			<property-class>int</property-class>
			<value>5</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>pOItem</managed-bean-name>
		<managed-bean-class>bean.POItem</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>quantity</property-name>
			<property-class>int</property-class>
			<value>1</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>bookList</managed-bean-name>
		<managed-bean-class>ctrl.BookList</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>bookDetail</managed-bean-name>
		<managed-bean-class>ctrl.BookDetail</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>ctrl.Login</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>signup</managed-bean-name>
		<managed-bean-class>ctrl.Signup</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>province</property-name>
			<property-class>java.lang.String</property-class>
			<value>ON</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>cart</managed-bean-name>
		<managed-bean-class>ctrl.Cart</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>payment</managed-bean-name>
		<managed-bean-class>ctrl.Payment</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>same</property-name>
			<property-class>boolean</property-class>
			<value>true</value>
		</managed-property>
		<managed-property>
			<property-name>user</property-name>
			<property-class>bean.User</property-class>
			<value>#{user}</value>
		</managed-property>
		<managed-property>
			<property-name>cart</property-name>
			<property-class>java.util.Map</property-class>
			<value>#{cart.cart}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>report</managed-bean-name>
		<managed-bean-class>ctrl.Report</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>user</property-name>
			<property-class>bean.User</property-class>
			<value>#{user}</value>
		</managed-property>
	</managed-bean>

</faces-config>
